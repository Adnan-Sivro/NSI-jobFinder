@model IList<JobFinder.Models.oglasi>
<div class="clear"></div>
<div id="slider-addoffer-wrapper" class="wrapper">
    <div class="pagewidth">
        <div class="slider">
            <h1>POST A <span>JOB</span></h1>

        </div>
        <div class="search-box">
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                <div class="row">
                    <div class="col-md-3" style="padding-top: 35px; padding-left: 25px; font-size: 16px; color:white">
                        Search for job with YOUJOB
                    </div>
                    <div class="col-md-3"><input type="text" placeholder="SEARCH FOR WORK" id="box1"></div>
                    <div class="col-md-3"><input type="text" placeholder="POSITION" id="box2"></div>
                    <div class="col-md-3"><input type="submit" value="SEARCH JOBS" id="btn-search"></div>
                </div>
            }
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class="row sub-menu">
    <nav class="pull-left">
        <ul id="menu">
            <li>@Html.ActionLink("View your offers", "Index", "Poslodavac")</li>
            <li>@Html.ActionLink("Add offer", "AddJobOffer", "Poslodavac")</li>
        </ul>
    </nav>
</div>
<div class="clear"></div>
<div id="content-wrapper" >
    <div class="pagewidth">
  
        <div class="clear"></div>
    </div>


    <div class="right-side">
       @if (Model.Count == 0)
       {
           <p>
               Sorry, nothing found! :(
           </p>
       }
        <ul>
            @for (int i = 0; (i) < Model.Count; i++)
            {

                <li>
                    <div class="box">
                        <div class="top">
                            <h1>@Html.DisplayFor(m => m[i].naziv_pozicije)</h1>
                            <p>@Html.DisplayFor(m => m[i].text_oglasa)</p>
                            <div class="date">added @Html.DisplayFor(m => m[i].datum_objave)</div>
                        </div>
                        <div class="bottom">

                            <a id="apply" onclick="location.href='@Url.Action("EditOffer", "Poslodavac", new { id = Model[i].idoglasi })'">EDIT</a>
                            <a id="view-more" onclick="location.href='@Url.Action("DeleteOffer", "Poslodavac", new { id = Model[i].idoglasi })'">DELETE</a>
                        </div>
                    </div>
                </li>

            }
        </ul>
    </div>
</div>
    
